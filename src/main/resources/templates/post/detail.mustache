{{>/layout/main-header}}

<div class="container">

    <input type="hidden" id="postId" value="{{data.post.id}}">
    <input type="hidden" id="pageOwnerId" value="{{data.post.user.id}}">

    <div class="my_post_detail_title">
        <h2>{{data.post.title}}</h2>
    </div>
    <hr />

    <div class="my_post_detail_content">
        {{{data.post.content}}}
    </div>


    {{#data.isPageOwner}}
    <div>
        <a class="btn btn-outline-success" href="#">수정</a>
        <button id="btn-delete" class="btn btn-outline-danger">삭제</button>
    </div>
    {{/data.isPageOwner}}
    <br />
</div>


<script src="/js/post/detail.js"></script>

{{>/layout/footer}}